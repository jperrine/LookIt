<div class="LookSnippet">
	<%= link_to image_tag(look.cover.url(:thumb)), url_for(:action => 'view', :id => look)  %>
	<h3><%= link_to h(look.title), url_for(:action => 'view', :id => look) %></h3>
	<br />
	<p>By <%= link_to h(look.user.display_name), url_for(:action => 'user', :id => look.user)%>
	<br />
	<p><%= link_to h(look.content), url_for(:action => 'view', :id => look) %></p>
	<br />
	<p>Tags: <%=h look.tag_list %></p>
</div>