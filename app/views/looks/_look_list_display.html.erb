<div class="lookPreview">
	<div class="lookContent">
		<%= image_tag(look.cover.url(:thumb)) %>
		<h2><%= h(look.title) %></h2>
		<% unless personal %>
			<p class="author">
				By <%= link_to h(look.user.display_name), :controller => 'published_looks', :action => 'user', :id => look.user %>
			</p>
		<% end %>
		<p><%= h(look.content)%></p>
		<p class="tags">
			<% unless look.tag_list.empty? %>
				<%=h look.tag_list %>
			<% else %>
				No tags.
			<% end %>
		</p>
	</div>
	<ul>
		<% if personal %>
			<%= render :partial => 'looks/look_editor_controls', :locals => {:look => look}%>
		<% else %>
			<li><%= link_to "View", :controller => 'published_looks', :action => 'view', :id => look %></li>
			<li>Share</li>
			<li>Like</li>
		<% end %>
	</ul>
	<div class="clear"></div>
</div>