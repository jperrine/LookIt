<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <%= javascript_include_tag :defaults %>
    <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
    <title>LookIt</title>
    <%= stylesheet_link_tag 'style' %>
  </head>
  <body>
  	<div id="login">
  		<% unless session[:user_id] %>
  			<%= link_to "Login", login_path %>
  		<% else %>
  			<%= link_to "Logout", logout_path %>
  		<% end %>
  	</div>
    <div id="wrapper">
    	<% if @current_user %>
    		<div id="user_avatar">
  				 <%=h @current_user.display_name %>
  				 <span id="user_bio">
  				 	<%=h @current_user.bio %>
  				 </span>
    		</div>
    	<% end %>
      <div id="nav">
        <ul>
          <li><%= link_to "Home", root_url %></li>
          <% if session[:user_id] %>
            <li><%= link_to "My Looks", user_looks_url(:user_id => session[:user_id]) %></li>
            <li><%= link_to "New Look", new_user_look_url(:user_id => session[:user_id]) %></li>
            <li><%= link_to "Settings", edit_user_url(:id => session[:user_id]) %></li>
            <li><%= link_to "Log Out", logout_url %></li>
          <% else %>
            <li>Browse Looks</li>
            <li><%= link_to "Login", login_url %></li>
            <li><%= link_to "Register", new_user_url %></li>
          <% end %>
        </ul>
      </div>
      <% unless flash[:notice].nil? %>
        <div id="flash"><%= flash[:notice] %></div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
  